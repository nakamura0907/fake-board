generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model articles {
  id         Int      @id @default(autoincrement())
  user_id    Int
  body       String   @db.VarChar(255)
  created_at DateTime @default(now()) @db.DateTime(0)
  users      users    @relation(fields: [user_id], references: [id], onUpdate: Restrict, map: "ref_articles_user_id")

  @@index([user_id], map: "ref_articles_user_id")
}

model users {
  id       Int        @id @default(autoincrement())
  name     String     @db.VarChar(30)
  password String     @db.VarChar(255)
  articles articles[]
}
